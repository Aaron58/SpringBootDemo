<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.greedystar.springbootdemo.modules.dao.UserDao">

    <resultMap id="userResultMap" type="cn.greedystar.springbootdemo.modules.entity.User">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <collection property="roles" ofType="cn.greedystar.springbootdemo.modules.entity.Role">
            <id property="id" column="roles.id"/>
            <result property="name" column="roles.name"/>
        </collection>
    </resultMap>
    
    <sql id="userColumns">
        a.id AS "id",
        a.username AS "username",
        a.password AS "password",
        ur.rid AS "roles.id",
        r.name AS "roles.name"
    </sql>

    <sql id="userJoins">
        LEFT JOIN user_role ur on ur.uid = a.id, role r
    </sql>

    <sql id="wheres">
        ur.rid = r.id
    </sql>

    <select id="get" resultMap="userResultMap">
        SELECT
        <include refid="userColumns"/>
        FROM user a
        <include refid="userJoins"/>
        <where>
            <include refid="wheres"/>
            AND a.id = #{id}
        </where>
    </select>

    <select id="getByUsername" resultMap="userResultMap">
        SELECT
        <include refid="userColumns"/>
        FROM user a
        <include refid="userJoins"/>
        <where>
            <include refid="wheres"/>
            AND a.username = #{username}
        </where>
    </select>

    <select id="findList" resultMap="userResultMap">
        SELECT
        <include refid="userColumns"/>
        FROM user a
        <include refid="userJoins"/>
        <where>
            <include refid="wheres"/>
        </where>
    </select>

    <select id="findAllList" resultMap="userResultMap">
        SELECT
        <include refid="userColumns"/>
        FROM user a
        <include refid="userJoins"/>
        <where>
            <include refid="wheres"/>
        </where>
    </select>

    <select id="findUserList" resultMap="userResultMap">
        SELECT
        <include refid="userColumns"/>
        FROM user a
        <include refid="userJoins"/>
        <where>
            <include refid="wheres"/>
        </where>
    </select>

    <insert id="insert">
        INSERT INTO user(id, name)
        VALUES (#{id}, #{name})
    </insert>

    <update id="update">
        UPDATE user SET
        id = #{id},name = #{name}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM user
        WHERE id = #{id}
    </delete>

</mapper>