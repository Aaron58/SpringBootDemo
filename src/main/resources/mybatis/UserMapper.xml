<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.greedystar.springbootdemo.modules.dao.UserDao">

    <sql id="userColumns">
        a.id AS "id",
        a.name AS "name",
        t.id AS "type.id",
        t.name AS "type.name"
    </sql>

    <sql id="userJoins">
        LEFT JOIN type t on a.tid = t.id
    </sql>

    <select id="get" resultType="cn.greedystar.springbootdemo.modules.entity.User">
        SELECT
        <include refid="userColumns"/>
        FROM user a
        <include refid="userJoins"/>
        WHERE a.id = #{id}
    </select>

    <select id="findList" resultType="cn.greedystar.springbootdemo.modules.entity.User">
        SELECT
        <include refid="userColumns"/>
        FROM user a
        <include refid="userJoins"/>
        <where>
        </where>
    </select>

    <select id="findAllList" resultType="cn.greedystar.springbootdemo.modules.entity.User">
        SELECT
        <include refid="userColumns"/>
        FROM user a
        <include refid="userJoins"/>
        <where>

        </where>
    </select>

    <select id="findUserList" resultType="cn.greedystar.springbootdemo.modules.entity.User">
        SELECT
        <include refid="userColumns"/>
        FROM user a
    </select>

    <insert id="insert">
        INSERT INTO user(id, name)
        VALUES (#{id}, #{name})
    </insert>

    <update id="update">
        UPDATE user SET
        id = #{id},name = #{name}
        WHERE id = #{id}
    </update>

    <delete id="delete">
        DELETE FROM user
        WHERE id = #{id}
    </delete>

</mapper>